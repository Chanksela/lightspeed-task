{
	"extends": "@vue/tsconfig/tsconfig.json",
	"include": ["env.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"], // Include .vue files
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
